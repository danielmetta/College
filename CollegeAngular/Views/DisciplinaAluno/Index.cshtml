
@{
    ViewBag.Title = "Index";
}

<div class="container" ng-controller="DisciplinaAlunoController">
    <form>
        <div class="form-row">
            <div class="form-group col-md-12 text-center">

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12 text-center">
                <h4>Cadastro de Disciplinas</h4>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <select id="inputState" class="form-control" ng-model="dado.DisciplinaId">
                    <option ng-selected="true">Selecione uma Disciplina...</option>
                    <option ng-repeat="obj in disciplinas" value="{{obj.Id}}" ng-selected="dado.DisciplinaId == obj.Id">{{obj.Nome}}</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <select id="inputState" class="form-control" ng-model="dado.AlunoId">
                    <option ng-selected="true">Selecione um Aluno...</option>
                    <option ng-repeat="obj in alunos" value="{{obj.Id}}" ng-selected="dado.AlunoId == obj.Id">{{obj.Nome}}</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input type="number" class="form-control" id="inputEmail4" placeholder="Nota" ng-model="dado.Nota">
            </div>
        </div>
        <button type="button" ng-click="adicionar(dado)" class="btn btn-primary">Salvar</button>
    </form>
    <br>
    <br>
    <br>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Disciplina</th>
                <th scope="col">Aluno</th>
                <th scope="col">Nota</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in disciplinaAlunos">
                <td>{{item.Id}}</td>
                <td>{{item.Disciplina.Nome}}</td>
                <td>{{item.Aluno.Nome}}</td>
                <td>{{item.Nota}}</td>
                <td><a href="" ng-click="atualizar(item)">editar</a></td>
            </tr>
        </tbody>
    </table>
</div>

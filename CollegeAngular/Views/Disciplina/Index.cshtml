
@{
    ViewBag.Title = "Index";
}

<div class="container" ng-controller="DisciplinaController">


    <form>
        <div class="form-row">
            <div class="form-group col-md-12 text-center">

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12 text-center">
                <h4>Cadastro de Disciplinas</h4>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <input type="text" class="form-control" id="inputEmail4" placeholder="Nome" ng-model="dado.Nome">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <select id="inputState" class="form-control" ng-model="dado.CursoId">
                    <option ng-selected="true">Selecione um Curso...</option>
                    <option ng-repeat="obj in cursos" value="{{obj.Id}}" ng-selected="dado.CursoId == obj.Id">{{obj.Nome}}</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <select id="inputState" class="form-control" ng-model="dado.ProfessorId">
                    <option ng-selected="true">Selecione um Curso...</option>
                    <option ng-repeat="obj in professores" value="{{obj.Id}}" ng-selected="dado.ProfessorId == obj.Id">{{obj.Nome}}</option>
                </select>
            </div>
        </div>
        <button type="button" ng-click="adicionar(dado)" class="btn btn-primary">Salvar</button>
    </form>
    <br>
    <br>
    <br>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Curso</th>
                <th scope="col">Professor</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in disciplinas">
                <td>{{item.Id}}</td>
                <td>{{item.Nome}}</td>
                <td>{{item.Curso.Nome}}</td>
                <td>{{item.Professor.Nome}}</td>
                <td><a href="" ng-click="atualizar(item)">editar</a></td>
            </tr>
        </tbody>
    </table>
</div>
